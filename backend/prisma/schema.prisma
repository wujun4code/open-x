generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String?
  bio       String?
  avatar    String?
  coverImage String?
  verified  Boolean  @default(false)
  onboardingCompleted Boolean @default(false)
  role      String   @default("user") // user, moderator, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts         Post[]
  likes         Like[]
  comments      Comment[]
  bookmarks     Bookmark[]
  followers     Follow[]     @relation("UserFollowers")
  following     Follow[]     @relation("UserFollowing")
  
  // Moderation relations
  reportsCreated    Report[] @relation("ReportedBy")
  reportsReviewed   Report[] @relation("ReviewedBy")
  moderationActions ModerationAction[] @relation("ModeratedUser")
  moderatorActions  ModerationAction[] @relation("Moderator")
  
  @@map("users")
}

// Post model (tweets)
model Post {
  id        String   @id @default(cuid())
  content   String
  imageUrl  String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes     Like[]
  comments  Comment[]
  bookmarks Bookmark[]
  hashtags  PostHashtag[]
  reports   Report[]

  @@index([userId])
  @@index([createdAt])
  @@map("posts")
}

// Like model
model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("likes")
}

// Comment model (replies to posts)
model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  reports Report[]

  @@index([userId])
  @@index([postId])
  @@index([createdAt])
  @@map("comments")
}

// Follow model (user relationships)
model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  // Relations
  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

// Bookmark model (saved posts)
model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("bookmarks")
}

// Hashtag model
model Hashtag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  // Relations
  posts PostHashtag[]

  @@index([name])
  @@map("hashtags")
}

// Join table for Post and Hashtag (many-to-many)
model PostHashtag {
  id        String   @id @default(cuid())
  postId    String
  hashtagId String
  createdAt DateTime @default(now())

  // Relations
  post    Post    @relation(fields: [postId], references: [id], onDelete: Cascade)
  hashtag Hashtag @relation(fields: [hashtagId], references: [id], onDelete: Cascade)

  @@unique([postId, hashtagId])
  @@index([postId])
  @@index([hashtagId])
  @@map("post_hashtags")
}

// Report model (content moderation)
model Report {
  id          String   @id @default(cuid())
  reason      String   // Spam, Harassment, Hate Speech, etc.
  description String?  // Optional details from reporter
  status      String   @default("pending") // pending, reviewed, dismissed, actioned
  
  // What's being reported
  postId      String?
  post        Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  commentId   String?
  comment     Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  // Who reported it
  reporterId  String
  reporter    User     @relation("ReportedBy", fields: [reporterId], references: [id])
  
  // Moderation action
  reviewedById String?
  reviewedBy   User?   @relation("ReviewedBy", fields: [reviewedById], references: [id])
  reviewedAt   DateTime?
  moderatorNotes String?
  action       String? // warning, content_removed, user_suspended, dismissed
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  moderationActions ModerationAction[]
  
  @@index([status])
  @@index([reporterId])
  @@index([postId])
  @@index([commentId])
  @@map("reports")
}

// Moderation Action model (tracking moderator actions)
model ModerationAction {
  id          String   @id @default(cuid())
  type        String   // warning, suspension, ban, content_removal
  reason      String
  duration    Int?     // Duration in days for temporary actions
  
  targetUserId String
  targetUser   User    @relation("ModeratedUser", fields: [targetUserId], references: [id])
  
  moderatorId  String
  moderator    User    @relation("Moderator", fields: [moderatorId], references: [id])
  
  reportId     String?
  report       Report? @relation(fields: [reportId], references: [id])
  
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  
  @@index([targetUserId])
  @@index([moderatorId])
  @@map("moderation_actions")
}
